<div class="modal" tabindex="-1" data-form-modal-form-target="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" data-form-modal-form-target="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" data-form-modal-form-target="modalBody"                 data-action="submit->form-modal-form#submitForm">
                {{ modalContent|default('Loading...') }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-action="form-modal-form#submitForm">Save changes</button>
            </div>
        </div>
    </div>
</div>

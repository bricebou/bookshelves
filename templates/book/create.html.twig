{% extends 'base.html.twig' %}

{% block title %}{% trans %}book.create{% endtrans %}{% endblock %}

{% block body %}
    <div class="container-lg">
        <h1>{% trans %}book.create{% endtrans %}</h1>

        <div class="row">
            <div class="col-7">
                {% set buttonText = 'book.form.create.submit' %}
                {{ include("forms/_book.html.twig", {'button_label': buttonText | trans | raw}) }}
            </div>

            <div class="col-4 offset-1">
                <h2>Recherche ISBN</h2>
                {{ include("forms/_isbn.html.twig") }}

                <h3>Scan ISBN</h3>

                <div id="isbn-reader"></div>

            </div>
        </div>
    </div>
{% endblock %}